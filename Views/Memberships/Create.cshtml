@model GymManagementSystem.Models.Membership

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" class="card">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Staff_Id" class="control-label">Staff</label>
                    <select id="Select1" class="form-select" asp-for="Staff_Id">
                        <option value="" selected disabled>-- Select Staff Id --</option>
                        @foreach (var staff in ViewBag.GetStaffs)
                        {
                            <option value="@staff.Staff_id">@staff.Staff_Name</option>
                        }
                    </select>
                    <span asp-validation-for="Staff_Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Member_Id" class="control-label">Member</label>
                    <select id="Select1" class="form-select" asp-for="Member_Id">
                        <option value="" selected disabled>-- Select Member Id --</option>
                        @foreach (var member in ViewBag.GetMembers)
                        {
                            <option value="@member.Member_Id">@member.Member_Name</option>
                        }
                    </select>
                    <span asp-validation-for="Member_Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label">Start Date</label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label">End Date</label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Total" class="control-label"></label>
                    <input asp-for="Total" class="form-control" />
                    <span asp-validation-for="Total" class="text-danger"></span>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
