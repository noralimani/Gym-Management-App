@model GymManagementSystem.Models.Member

@{
    ViewData["Title"] = "Delete";
}



<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Are you sure you want to delete this?</h3>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Member_Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Member_Name)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Member_Surname)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Member_Surname)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Phone)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Phone)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.JoinedDate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.JoinedDate)
                    </dd>
                </dl>
            </div>
            <form asp-action="Delete" class="card-footer d-flex justify-content-between">
                <input type="hidden" asp-for="Member_Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> 
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</div>
