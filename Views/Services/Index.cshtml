@model IEnumerable<GymManagementSystem.Models.Service>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-12 mb-1">
        <a class="btn btn-primary" asp-action="Create">Create New Service</a>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="table-responsive">
                <table class="table table-vcenter card-table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Staff)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Member)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @item.Price MKD
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Staff.Staff_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Member.Member_Name)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Services_Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Services_Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Services_Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>